<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context="com.example.team6.uniclash.pauseActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Switch android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/resumeButton"
        android:textSize="20sp"
        android:text="Sound"
        android:layout_marginBottom="53dp"
        android:id="@+id/sound2"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Restart"
        android:layout_marginBottom="214dp"
        android:onClick="pressRestart"
        android:id="@+id/restartButton"
        android:layout_alignParentBottom="true"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/restartButton"
        android:text="Resume"
        android:onClick="pressResume"
        android:layout_marginBottom="31dp"
        android:id="@+id/resumeButton"
        android:layout_alignStart="@+id/restartButton"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Main Menu"
        android:onClick="pressMain"
        android:layout_below="@+id/resumeButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>